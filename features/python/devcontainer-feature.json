{
    "name": "Python",
    "id": "python",
    "version": "1.0.0",
    "description": "Installs Python using pyenv with virtual environment support",
    "documentationURL": "https://www.python.org/",
    "options": {
        "pythonVersion": {
            "type": "string",
            "default": "3.11",
            "description": "Python version to install"
        }
    },
    "installsAfter": [],
    "containerEnv": {
        "PYENV_ROOT": "/home/user/.pyenv",
        "PYTHONDONTWRITEBYTECODE": "1",
        "PYTHONUNBUFFERED": "1",
        "PYTHONASYNCIODEBUG": "1"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ]
        }
    }
}
